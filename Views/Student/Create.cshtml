@model ChoirManager.Models.Student

<h1>Add new Student</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="Grade" class="form-label"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="ParentFirstName" class="form-label"></label>
        <input asp-for="ParentFirstName" class="form-control" />
        <span asp-validation-for="ParentFirstName" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="ParentLastName" class="form-label"></label>
        <input asp-for="ParentLastName" class="form-control" />
        <span asp-validation-for="ParentLastName" class="text-danger"></span>
    </div>

     <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

 <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="WantsSolos" class="form-check-input" />
        <label asp-for="WantsSolos" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

        