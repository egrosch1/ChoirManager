@model IEnumerable<ChoirManager.Models.Student>

@{
    ViewData["Title"] = "Student Page";
}

<div class="text-center">
    <h1 class="display-4">Student Manager</h1>
</div>

<a asp-controller="Student" asp-action="Create" class="btn btn-primary mb-3">Add New Student</a>

<h1>All Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th>Parent Name</th>
            <th>Wants Solos?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Grade</td>
                <td>@student.ParentFirstName @student.ParentLastName</td>
                <td>@(student.WantsSolos ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
